    key <AD06>	{[ U1046D,	U10477,		U221A,		U0259	]}; //y: ah     Awe    âˆš (sq root)  É™ (schwa)
    key <AD07>	{[ U10473,	U1046B,		U2191,		U028A	]}; //u: up     Wool   â†‘ (up arrow) ÊŠ (upsilon)
