default partial alphanumeric_keys modifier_keys
xkb_symbols "plus" {

    name[Group1]= "Shavian+ (QWERTY)";

    key <TLDE>	{[ grave,	asciitilde,	U00B4,		U2248	]}; // ` ~ Â´ (acute accent)  â‰ˆ (almost equal)
