    key <AD11>	{[ bracketleft,	braceleft,	U27E8,		U27EE	]}; //   [      {      âŸ¨ (angle br) âŸ® (math flat paren)
    key <AD12>	{[ bracketright, braceright,	U27E9,		U27EF	]}; //   ]      }      âŸ© (angle br) âŸ¯ (math flat paren)
    key <BKSL>	{[ backslash,	bar,		U2022,		U25E6	]}; //   \      |      â€¢ (bullet)   â—¦ (white bullet)

